
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.vital.dip.ContactInfo">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/newFriend_info_avatar"
    android:layout_alignParentEnd="false"
    android:layout_alignParentTop="true"
    android:layout_above="@+id/newFriend_userInfo"
    android:background="#ffb6b6b6" />

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/newFriend_info_accept"
    android:background="@drawable/add_fr"
    android:onClick="acceptNewFriend"
    android:layout_marginTop="187dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/newFriend_denay"
    android:background="@drawable/add_friend"
    android:layout_alignTop="@+id/newFriend_info_accept"
    android:layout_alignParentEnd="true" />

<ListView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/newFriend_userInfo"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/newFriend_denay" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView4"
    android:layout_above="@+id/userInfo"
    android:layout_alignParentStart="true" />

</RelativeLayout>